<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--标题 title-->
    <TextView
        android:id="@+id/title_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <!--导航栏左边两个按钮（文字）-->
    <TextView
        android:id="@+id/left_text_view1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:text=""
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/left_text_view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/left_text_view1"
        android:layout_marginLeft="10dp"
        app:layout_goneMarginLeft="70dp"
        android:text=""
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <!--导航栏又边两个按钮（文字）-->
    <TextView
        android:id="@+id/right_text_view1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:text=""
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/right_text_view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/right_text_view1"
        android:layout_marginRight="10dp"
        app:layout_goneMarginRight="70dp"
        android:text=""
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <!--导航栏左边两个按钮（图片）-->
    <ImageView
        android:id="@+id/left_image_view1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/left_image_view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/left_image_view1"
        android:layout_marginLeft="10dp"
        app:layout_goneMarginLeft="70dp"
        android:scaleType="centerCrop"
        android:layout_width="40dp"
        android:visibility="gone"
        android:layout_height="0dp"/>
    <!--导航栏又边两个按钮（图片）-->
    <ImageView
        android:id="@+id/right_image_view1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/right_image_view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/right_image_view1"
        app:layout_goneMarginRight="70dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="0dp"/>
    <!--底部细分割线-->
    <View
        android:id="@+id/bottom_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryDark"
        android:layout_width="0dp"
        android:layout_height="0.5dp"/>
</android.support.constraint.ConstraintLayout>